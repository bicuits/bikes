@model LoginVM
@{
    Layout = "~/Views/_PublicLayout.cshtml";
}


@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class="form-signin" }))
{
    <h2 class="form-signin-heading">Please sign in</h2>
    
    <div class="errorMessage">@Model.errorMessage</div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.username)
        @Html.TextBoxFor(m => m.username, new { @class = "form-control", autofocus = "" })

        @Html.LabelFor(m => m.password)
        @Html.TextBoxFor(m => m.password, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </div>
}
