<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap/bootstrap-theme.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/datepicker/css/bootstrap-datepicker3.min.css" />

    <script src="~/Content/jquery/jquery-1.9.1.min.js"></script>
    <script src="~/Content/jquery/jquery.validate.min.js"></script>
    <script src="~/Content/jquery/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/bootstrap/scripts/bootstrap.min.js"></script>
    <script src="~/Content/datepicker/js/bootstrap-datepicker.min.js"></script>

    @RenderSection("HEAD", false)
</head>

<body role="document">


    <!-- MAIN MENU -->
    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Drurys Bikes</a>
            </div>

            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Rides", "Index", "Ride")
                    </li>
                    <li>
                        @Html.ActionLink("History", "Index", "Archive")
                    </li>
                    <li>
                        @Html.ActionLink("Routes", "Index", "Route")
                    </li>
                    <li>
                        @Html.ActionLink("Bikes", "Index", "Bike")
                    </li>
                    <li>
                        @Html.ActionLink("Riders", "Index", "Rider")
                    </li>
                    <li>
                        @Html.ActionLink("Admin", "Index", "Admin")
                    </li>
                    <li>                 
                        @Html.ActionLink("Logout", "Logout", "Login")
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container" role="main">
        @RenderBody()
    </div>
</body>
</html>
